<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ui.create_job.CreateJobActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bt_close"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_chevron_left"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/name_toolbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Destinasi"
                android:textSize="@dimen/_18sdp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_toLeftOf="@id/lytFilter"
                android:background="@drawable/bg_text_input_rounded"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_search"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:hint="Cari Destinasi Wisata"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:lines="1"
                    android:textColorHint="@color/black_60"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:id="@+id/iv_clear_text"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:src="@drawable/ic_close"/>

            </LinearLayout>

            <!--            <com.google.android.material.textfield.TextInputEditText-->
            <!--                android:id="@+id/searchView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/_35sdp"-->
            <!--                android:background="@drawable/bg_text_input_rounded"-->
            <!--                android:padding="@dimen/_5sdp"-->
            <!--                android:drawablePadding="@dimen/_5sdp"-->
            <!--                android:layout_toLeftOf="@+id/lytFilter"-->
            <!--                android:layout_marginBottom="@dimen/_5sdp"-->
            <!--                android:layout_marginRight="@dimen/_10sdp"-->
            <!--                android:layout_marginLeft="@dimen/_10sdp"-->
            <!--                android:hint="Cari Pekerjaan"-->
            <!--                android:drawableStart="@drawable/ic_search"-->
            <!--                />-->

            <!--            <androidx.appcompat.widget.SearchView-->
            <!--                android:id="@+id/searchView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/_35sdp"-->
            <!--                android:layout_toLeftOf="@id/lytFilter"-->
            <!--                android:layout_marginBottom="@dimen/_5sdp"-->
            <!--                android:layout_marginRight="@dimen/_10sdp"-->
            <!--                android:layout_marginLeft="@dimen/_10sdp"-->
            <!--                app:closeIcon="@drawable/ic_close"-->
            <!--                android:background="@drawable/bg_text_input_rounded"/>-->

            <LinearLayout
                android:id="@+id/lytFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <!--                <ImageView-->
                <!--                    android:layout_width="@dimen/_25sdp"-->
                <!--                    android:layout_height="@dimen/_25sdp"-->
                <!--                    android:layout_gravity="right"-->
                <!--                    android:src="@drawable/ic_filter"-->
                <!--                    app:tint="@color/white" />-->

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:textSize="@dimen/_14sdp"-->
                <!--                    android:layout_marginLeft="@dimen/_5sdp"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:text="Filter"/>-->

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/lytSearhEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:tint="@color/black_20"
                android:src="@drawable/ic_search_empty"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black_40"
                android:textSize="@dimen/_14sdp"
                android:text="Pencarian tidak ditemukan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/grey_40"
                android:textSize="@dimen/_12sdp"
                android:text="Coba kata kunci yang lebih \n umum"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytListEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:tint="@color/black_20"
                android:src="@drawable/ic_empty_data"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black_40"
                android:textSize="@dimen/_20sdp"
                android:text="OOOPS!"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/grey_40"
                android:textSize="@dimen/_12sdp"
                android:text="Daftar pariwisata kosong"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>